{
    "manifest_version": 3,
    "name": "NLP Powered Resume Optimizer",
    "version": "1.0",
    "description": "Optimize your resume for ATS by analyzing LinkedIn job descriptions and your PDF resume. Get actionable feedback.",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://www.linkedin.com/*"
    ],
    "background": {
      "service_worker": "background.js" 
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icons/*.png"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  